@model bco.atlantida.estadocuenta.webapp.Models.ViewModel.MovimientosViewModel
<div class="row">
    <form asp-action="AccionesMovimientos" method="post" id="formCompras">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="IdTarjeta" class="form-control" type="hidden" />
        <input asp-for="IdMovimiento" class="form-control" readonly type="hidden" />       
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Monto" class="control-label"></label>
                    <input asp-for="Monto" class="form-control form-control-sm" readonly/>
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control form-control-sm" rows="5" readonly></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <input type="button" id="btnSubmitCompras" onclick="guardarPago()" value="Guardar" class="btn btn-primary btn-sm" />
                </div>
            </div>
        </div>
    </form>
</div>